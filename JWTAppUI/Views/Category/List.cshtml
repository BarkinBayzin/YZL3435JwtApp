@model List<JWTAppUI.Models.CategoryListResponseModel>
@{
    Layout = "_Layout";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <a asp-action="Create" asp-controller="Category">Kategori Ekle</a>
        <table class="table table-stripped table-bordered pt-4">
            <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Definition</th>
                </tr>
            </thead>
            <tbody>
                @if(Model?.Count > 0)
                {
                    @foreach(var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Definition</th>
                            <th>
                                <a asp-action="Update" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Güncelle</a>
                                <a asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2" class="text-danger">Herhangi bir data bulunumadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>