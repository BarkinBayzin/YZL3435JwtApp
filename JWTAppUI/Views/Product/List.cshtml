@model List<JWTAppUI.Models.ProductListRepsonseModel>
@{
    Layout = "_Layout";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <a asp-action="Create" asp-controller="Product">Ürün Ekle</a>
        <table class="table table-stripped table-bordered pt-4">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Price</th>
                    <th scope="col">Category Name</th>
                </tr>
            </thead>
            <tbody>
                @if (Model?.Count > 0)
                {

                    @foreach (var item in Model)
                    {
                        <tr>
                            <th>@item.Id</th>
                            <th>@item.Name</th>
                            <th>@item.Price</th>
                            <th>@item.Category.Definition</th>
                            <th>
                                <a asp-action="Update" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-primary btn-sm">Update</a>
                                <a asp-action="Remove" asp-controller="Product" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                            </th>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="2">Herhangi bir data bulunamadı</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
