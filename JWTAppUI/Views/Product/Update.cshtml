@model JWTAppUI.Models.ProductUpdateRequestModel
@{

    Layout = "_Layout";
}

<div class="row">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title">Create Product</h5>
            </div>
            <form asp-action="Update" asp-controller="Product" method="post">
                <input type="hidden" asp-for="@Model.Id" />
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="@Model.Name">Name</label>
                        <input asp-for="@Model.Name" class="form-control" placeholder="Product Name" />
                        <span asp-validation-for="@Model.Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Stock">Content</label>
                        <input asp-for="@Model.Stock" class="form-control" placeholder="Product Stock" />
                        <span asp-validation-for="@Model.Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Price">Unit Price</label>
                        <input asp-for="@Model.Price" class="form-control" placeholder="Product Unit Price" />
                        <span asp-validation-for="@Model.Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.CategoryId" class="control-label">Choose The Category</label>
                        <select asp-for="@Model.CategoryId" asp-items="@ViewBag.Categories" class="form-control">
                            <option value="@Model.CategoryId">Choose Category</option>
                        </select>
                        <span asp-validation-for="@Model.CategoryId" class="text-danger"></span>
                    </div>
                </div>
                <div class="card-footer">
                    <div class="form-group">
                        <input type="submit" value="Update Product" class="btn btn-outline-success btn-sm float-right" />
                        <a asp-action="List" class="btn btn-outline-info btn-sm float-left">Back To List</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>